.col-lg-10.col-md-10.col-sm-12.heightMax.padding-0.noMarginL(ng-controller='uploadMemberPhotoCtrl')
	.gray.heightSM.margin-1.vertAlign
		h2.col-md-6.subTitle.margin0 UPLOAD MEMBER PHOTO
	
	form.form-horizontal.col-md-12.darkGrayFont(role="form", method='POST', action='/uploadMemberPic', enctype='multipart/form-data')
		fieldset
			legend Upload new photo
			.form-group
					label.col-md-2.control-label(for="uploadMemberPic") CHOOSE AN IMAGE
					.col-md-4
						input#uploadMemberPic.form-control.input-sm(type="file",  name='image', ng-model='file', ng-change='fileChange()')
					button(type='submit') submit