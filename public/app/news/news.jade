.col-lg-10.col-md-10.col-sm-12.heightMax.padding-0.noMarginL(ng-controller='newsCtrl')
	.gray.heightSM.margin-1.vertAlign
		h2.col-sm-2.col-xs-2.subTitle.margin0 NEWS
		.FloatR
			a(class='btn btn-default editBtn darkGrayBG' , href='/NewNotice', ng-show='identity.currentUser.isAdmin()') NEW NOTICE
			.inline.subTitle TOTAL
			h2.inline.square.darkGrayBG.thinText {{notices.length}}
	.margin-half.height100
		.media.darkGrayFont.margin0.scale-fade(ng-repeat='notice in filteredNotices  ')
			a.pull-left.thumbnailPic(href='/news/{{notice._id}}')
				img.media-object(ng-src='/images/choirPhoto/{{notice.image}}')
			a(href='/news/{{notice._id}}')
				.media-body.media-body-Frame.darkGrayFont
					h3.media-heading.Ralewayh3 {{notice.title | uppercase}}
					h5 {{notice.date | date}}
					small.reportName {{notice.report}}
					p.textP {{notice.content }}
					
		
		
		pagination(total-items='totalItems',  ng-model='currentPage', items-per-page= 'itemsPerPage', ng-changed='pageChanged()')
		
